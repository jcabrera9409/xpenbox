meta {
  name: CreditCardCreate
  type: http
  seq: 1
}

post {
  url: {{apiUrl}}/api/rest/v1/creditcard
  body: json
  auth: none
}

body:json {
  {
    "name": "TC BBVA",
    "creditLimit": 1000,
    "currentBalance": 0,
    "billingDay": 9,
    "paymentDay": 15
  }
}

script:post-response {
  if (res.getStatus() == 201) {
    const response = res.getBody();
    bru.setEnvVar("rcCreditCard",response.data.resourceCode)
  }
  
}
